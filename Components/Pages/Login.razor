@page "/login"
@using BrainDumpster.Data
@inject AppDbContext db
@inject NavigationManager nav
@inject IJSRuntime JS

<PageTitle>Login - BrainDumpster</PageTitle>

<div class="login-full-container">
    <!-- Background with particles -->
    <div class="login-background">
        <div class="particles"></div>
        <div class="gradient-overlay"></div>
    </div>

    <!-- Main Content -->
    <div class="login-content">
        <!-- Brand Header -->
        <div class="brand-header">
            <div class="logo-animated">📖</div>
            <h1 class="brand-title">BrainDumpster</h1>
            <p class="brand-subtitle">Your mind's digital sanctuary</p>
        </div>

        <!-- Login Card -->
        <div class="login-card-full">
            <div class="card-header">
                <h2>Welcome Back</h2>
                <p>Sign in to continue your journaling journey</p>
            </div>

            <div class="form-wrapper">
                <div class="input-field">
                    <label>👤 Username</label>
                    <input type="text"
                           placeholder="Enter your username"
                           @bind="username"
                           @onkeypress="HandleKeyPress"
                           class="modern-input-full" />
                </div>

                <div class="input-field">
                    <label>🔒 PIN</label>
                    <input type="password"
                           placeholder="Enter your 4-6 digit PIN"
                           @bind="pin"
                           @onkeypress="HandleKeyPress"
                           maxlength="6"
                           class="modern-input-full" />
                    <small class="input-hint">Numbers only, easy to remember</small>
                </div>

                <button @onclick="LoginUser" class="login-btn-full" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner"></span>
                        <span>Signing In...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                        <span class="btn-icon">→</span>
                    }
                </button>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert-message @(isError ? "error" : "success")">
                        @message
                    </div>
                }

                <div class="divider">
                    <span>Don't have an account?</span>
                </div>

                <a href="/register" class="register-link-full">
                    Create New Account
                </a>

                <div class="guest-section">
                    <p class="guest-text">Just want to explore?</p>
                    <button @onclick="TryDemo" class="guest-btn">
                        Try Demo Mode
                    </button>
                </div>
            </div>
        </div>

        <!-- Features -->
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">✨</div>
                <h4>Free Forever</h4>
                <p>No subscriptions, no ads, no limits</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔐</div>
                <h4>Complete Privacy</h4>
                <p>Your thoughts stay with you</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📈</div>
                <h4>Growth Tracking</h4>
                <p>See your emotional journey unfold</p>
            </div>
        </div>

        <!-- Footer -->
        <div class="login-footer">
            <p>"The unexamined life is not worth living" — Socrates</p>
        </div>
    </div>
</div>

