@code {
    // User data
    private User? currentUser = null;
    private int loggedUserId = 0;
    private int totalEntries = 0;
    private int currentStreak = 0;
    private string memberSince = "";
    
    // Forms
    private bool showUsernameForm = false;
    private bool showPinForm = false;
    private string newUsername = "";
    private string currentPin = "";
    private string newPin = "";
    private string confirmPin = "";
    private string message = "";
    private bool isError = false;
    private bool isSaving = false;
    
    // Theme
    private bool isDarkMode = false;

    protected override async Task OnInitializedAsync()
    {
        // Get logged user ID
        var userIdStr = await JS.InvokeAsync<string>("localStorage.getItem", "loggedUserId");
        if (!string.IsNullOrEmpty(userIdStr))
        {
            loggedUserId = int.Parse(userIdStr);
            await LoadUserData();
            await LoadTheme();
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }

    private async Task LoadUserData()
    {
        try
        {
            // Load current user
            currentUser = await Task.Run(() => db.Users.Find(loggedUserId));
            
            if (currentUser == null)
            {
                Nav.NavigateTo("/login");
                return;
            }
            
            // Format member since date
            //memberSince = currentUser.CreatedAt.ToString("MMM yyyy");
            
            // Load total entries
            totalEntries = await Task.Run(() => 
                db.JournalEntries.Count(e => e.UserId == loggedUserId));
            
            // Calculate streak
            await CalculateStreak();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user data: {ex.Message}");
        }
    }

    private async Task CalculateStreak()
    {
        try
        {
            var entryDates = await Task.Run(() =>
                db.JournalEntries
                    .Where(e => e.UserId == loggedUserId)
                    .Select(e => e.EntryDate.Date)
                    .Distinct()
                    .OrderByDescending(d => d)
                    .ToList());
            
            if (!entryDates.Any())
            {
                currentStreak = 0;
                return;
            }
            
            int streak = 0;
            var checkDate = DateTime.Today;
            
            if (entryDates.Contains(DateTime.Today))
            {
                streak = 1;
                checkDate = DateTime.Today.AddDays(-1);
                
                while (entryDates.Contains(checkDate))
                {
                    streak++;
                    checkDate = checkDate.AddDays(-1);
                }
            }
            else
            {
                checkDate = DateTime.Today.AddDays(-1);
                if (entryDates.Contains(checkDate))
                {
                    streak = 1;
                    checkDate = checkDate.AddDays(-1);
                    
                    while (entryDates.Contains(checkDate))
                    {
                        streak++;
                        checkDate = checkDate.AddDays(-1);
                    }
                }
            }
            
            currentStreak = streak;
        }
        catch
        {
            currentStreak = 0;
        }
    }

    private async Task LoadTheme()
    {
        try
        {
            var darkModePref = await JS.InvokeAsync<string>("localStorage.getItem", "darkMode");
            isDarkMode = darkModePref == "true";
        }
        catch
        {
            isDarkMode = false;
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        await JS.InvokeVoidAsync("localStorage.setItem", "darkMode", isDarkMode.ToString());
        
        // Apply theme
        if (isDarkMode)
        {
            await JS.InvokeVoidAsync("eval", 
                "document.body.style.backgroundColor = '#0f172a'; " +
                "document.body.style.color = '#e2e8f0';");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", 
                "document.body.style.backgroundColor = '#f8fafc'; " +
                "document.body.style.color = '#1e293b';");
        }
    }

    private void ShowUsernameForm()
    {
        showUsernameForm = true;
        showPinForm = false;
        newUsername = currentUser?.Username ?? "";
        message = "";
        isError = false;
    }

    private void ShowPinForm()
    {
        showPinForm = true;
        showUsernameForm = false;
        currentPin = "";
        newPin = "";
        confirmPin = "";
        message = "";
        isError = false;
    }

    private void CloseModal()
    {
        showUsernameForm = false;
        showPinForm = false;
        message = "";
        isError = false;
        isSaving = false;
    }

    private async Task SaveUsername()
    {
        if (string.IsNullOrWhiteSpace(newUsername) || currentUser == null)
            return;
        
        if (newUsername == currentUser.Username)
        {
            message = "That's already your username!";
            isError = true;
            return;
        }
        
        if (newUsername.Length < 3)
        {
            message = "Username must be at least 3 characters";
            isError = true;
            return;
        }
        
        // Check if username exists
        var existingUser = await Task.Run(() => 
            db.Users.FirstOrDefault(u => u.Username == newUsername && u.Id != loggedUserId));
        
        if (existingUser != null)
        {
            message = "Username already taken";
            isError = true;
            return;
        }
        
        isSaving = true;
        
        try
        {
            currentUser.Username = newUsername;
            await Task.Run(() =>
            {
                db.Users.Update(currentUser);
                db.SaveChanges();
            });
            
            message = "Username updated successfully!";
            isError = false;
            
            // Close modal after success
            await Task.Delay(1500);
            CloseModal();
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SavePin()
    {
        if (currentUser == null)
            return;
        
        if (string.IsNullOrEmpty(currentPin) || currentPin != currentUser.Pin)
        {
            message = "Current PIN is incorrect";
            isError = true;
            return;
        }
        
        if (string.IsNullOrEmpty(newPin) || newPin.Length < 4 || !newPin.All(char.IsDigit))
        {
            message = "New PIN must be 4-6 digits";
            isError = true;
            return;
        }
        
        if (newPin != confirmPin)
        {
            message = "PINs don't match";
            isError = true;
            return;
        }
        
        if (newPin == currentPin)
        {
            message = "New PIN must be different";
            isError = true;
            return;
        }
        
        isSaving = true;
        
        try
        {
            currentUser.Pin = newPin;
            await Task.Run(() =>
            {
                db.Users.Update(currentUser);
                db.SaveChanges();
            });
            
            message = "PIN changed successfully!";
            isError = false;
            
            // Close modal after success
            await Task.Delay(1500);
            CloseModal();
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ExportJournals()
    {
        try
        {
            var entries = await Task.Run(() =>
                db.JournalEntries
                    .Where(e => e.UserId == loggedUserId)
                    .OrderByDescending(e => e.EntryDate)
                    .ToList());
            
            // Create JSON data
            var exportData = new
            {
                User = currentUser?.Username,
                ExportDate = DateTime.Now.ToString("yyyy-MM-dd HH:mm"),
                TotalEntries = entries.Count,
                Entries = entries.Select(e => new
                {
                    Date = e.EntryDate.ToString("yyyy-MM-dd HH:mm"),
                    Mood = e.PrimaryMood,
                    Content = e.Content
                })
            };
            
            var json = System.Text.Json.JsonSerializer.Serialize(exportData, 
                new System.Text.Json.JsonSerializerOptions { WriteIndented = true });
            
            // Copy to clipboard
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", json);
            
            // Show success message
            message = "✅ All journals copied to clipboard!";
            isError = false;
            showUsernameForm = false;
            showPinForm = false;
            
            // Auto-hide message
            await Task.Delay(3000);
            message = "";
        }
        catch
        {
            message = "❌ Could not export data";
            isError = true;
        }
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "loggedUserId");
        Nav.NavigateTo("/", true);
    }

    private void GoBack()
    {
        Nav.NavigateTo("/dashboard");
    }
}