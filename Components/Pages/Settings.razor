@page "/settings"
@using BrainDumpster.Data
@using BrainDumpster.Model
@inject AppDbContext db
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>Settings - BrainDumpster</PageTitle>

<div class="settings-simple">
    <!-- Header -->
    <div class="settings-header">
        <button class="btn-back" @onclick="GoBack">
            ← Back
        </button>
        <h1>⚙️ Settings</h1>
    </div>

    <!-- Profile Card -->
    <div class="settings-card">
        <h2>👤 Profile</h2>
        
        <!-- Username -->
        <div class="setting-item">
            <div class="setting-label">
                <span>Username</span>
                <small>Your display name</small>
            </div>
            <div class="setting-value">
                <span>@currentUser?.Username</span>
                <button @onclick="ShowUsernameForm" class="btn-change">
                    Change
                </button>
            </div>
        </div>

        <!-- PIN -->
        <div class="setting-item">
            <div class="setting-label">
                <span>PIN</span>
                <small>4-6 digit security code</small>
            </div>
            <div class="setting-value">
                <span>••••••</span>
                <button @onclick="ShowPinForm" class="btn-change">
                    Change
                </button>
            </div>
        </div>

        <!-- Theme -->
        <div class="setting-item">
            <div class="setting-label">
                <span>Theme</span>
                <small>App appearance</small>
            </div>
            <div class="setting-value">
                <button @onclick="ToggleTheme" class="theme-toggle">
                    @if (isDarkMode)
                    {
                        <span>🌙 Dark Mode</span>
                    }
                    else
                    {
                        <span>☀️ Light Mode</span>
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Data Card -->
    <div class="settings-card">
        <h2>📊 Data</h2>
        
        <div class="setting-item">
            <div class="setting-label">
                <span>Export Journals</span>
                <small>Download all your entries</small>
            </div>
            <div class="setting-value">
                <button @onclick="ExportJournals" class="btn-export">
                    📤 Export
                </button>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat">
                <div class="stat-number">@totalEntries</div>
                <div class="stat-label">Total Entries</div>
            </div>
            <div class="stat">
                <div class="stat-number">@currentStreak</div>
                <div class="stat-label">Day Streak</div>
            </div>
            <div class="stat">
                <div class="stat-number">@memberSince</div>
                <div class="stat-label">Member Since</div>
            </div>
        </div>
    </div>

    <!-- Account Info -->
    <div class="settings-card">
        <h2>ℹ️ Account Info</h2>
        
        <div class="account-info">
            <div class="info-row">
                <span class="info-label">User ID:</span>
                <span class="info-value">#@currentUser?.Id</span>
            </div>
            <div class="info-row">
                <span class="info-label">Account Created:</span>
                <span class="info-value">@memberSince</span>
            </div>
            <div class="info-row">
                <span class="info-label">Journal Entries:</span>
                <span class="info-value">@totalEntries entries</span>
            </div>
        </div>

        <button @onclick="Logout" class="btn-logout">
            🔓 Logout
        </button>
    </div>

    <!-- Username Form Modal -->
    @if (showUsernameForm)
    {
        <div class="modal-overlay" @onclick="CloseModal"></div>
        <div class="modal">
            <div class="modal-header">
                <h3>Change Username</h3>
                <button @onclick="CloseModal" class="modal-close">✕</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Current Username</label>
                    <div class="current-value">@currentUser?.Username</div>
                </div>
                <div class="form-group">
                    <label>New Username</label>
                    <input type="text" 
                           @bind="newUsername"
                           placeholder="Enter new username"
                           class="form-input"
                           @onkeypress="@((e) => { if (e.Key == "Enter") SaveUsername(); })" />
                </div>
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @(isError ? "error" : "success")">
                        @message
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button @onclick="CloseModal" class="btn-cancel">Cancel</button>
                <button @onclick="SaveUsername" class="btn-save" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner"></span>
                    }
                    Save Changes
                </button>
            </div>
        </div>
    }

    <!-- PIN Form Modal -->
    @if (showPinForm)
    {
        <div class="modal-overlay" @onclick="CloseModal"></div>
        <div class="modal">
            <div class="modal-header">
                <h3>Change PIN</h3>
                <button @onclick="CloseModal" class="modal-close">✕</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Current PIN</label>
                    <input type="password" 
                           @bind="currentPin"
                           placeholder="Enter current PIN"
                           class="form-input" />
                </div>
                <div class="form-group">
                    <label>New PIN (4-6 digits)</label>
                    <input type="password" 
                           @bind="newPin"
                           placeholder="Enter new PIN"
                           maxlength="6"
                           class="form-input" />
                </div>
                <div class="form-group">
                    <label>Confirm New PIN</label>
                    <input type="password" 
                           @bind="confirmPin"
                           placeholder="Re-enter new PIN"
                           maxlength="6"
                           class="form-input"
                           @onkeypress="@((e) => { if (e.Key == "Enter") SavePin(); })" />
                </div>
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @(isError ? "error" : "success")">
                        @message
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button @onclick="CloseModal" class="btn-cancel">Cancel</button>
                <button @onclick="SavePin" class="btn-save" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner"></span>
                    }
                    Change PIN
                </button>
            </div>
        </div>
    }
</div>

