@code {
    private string username = "";
    private string pin = "";
    private string confirmPin = "";
    private string message = "";
    private bool isError = false;
    private bool isLoading = false;

    private int GetPinStrength()
    {
        if (string.IsNullOrEmpty(pin)) return 0;

        int strength = 0;
        if (pin.Length >= 4) strength++;
        if (pin.Length >= 5) strength++;
        if (pin.Length >= 6) strength++;
        if (pin.All(char.IsDigit)) strength++;

        return strength;
    }

    private string GetStrengthHint()
    {
        int strength = GetPinStrength();
        return strength switch
        {
            0 => "Start typing your PIN",
            1 => "Weak - Try making it longer",
            2 => "Fair - Good start",
            3 => "Good - Almost there",
            4 => "Strong - Excellent!",
            _ => "Unknown"
        };
    }

    private async Task RegisterUser()
    {
        if (isLoading) return;

        isLoading = true;
        message = "";
        isError = false;

        try
        {
            // Validation
            if (string.IsNullOrWhiteSpace(username) || username.Length < 3)
            {
                message = "Username must be at least 3 characters";
                isError = true;
                isLoading = false;
                return;
            }

            if (string.IsNullOrWhiteSpace(pin) || pin.Length < 4 || !pin.All(char.IsDigit))
            {
                message = "PIN must be 4-6 digits";
                isError = true;
                isLoading = false;
                return;
            }

            if (pin != confirmPin)
            {
                message = "PINs don't match";
                isError = true;
                isLoading = false;
                return;
            }

            // Check if username exists
            if (db.Users.Any(u => u.Username == username))
            {
                message = "Username already taken";
                isError = true;
                isLoading = false;
                return;
            }

            // Create user
            var user = new User
            {
                Username = username,
                Pin = pin,
               
            };

            db.Users.Add(user);
            await db.SaveChangesAsync();

            message = "🎉 Account created successfully! Redirecting to login...";
            isError = false;

            await Task.Delay(1500);
            nav.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }
}