@page "/register"
@using BrainDumpster.Data
@using BrainDumpster.Model
@inject AppDbContext db
@inject NavigationManager nav

<PageTitle>Register - BrainDumpster</PageTitle>

<div class="register-full-container">
    <!-- Background -->
    <div class="register-background">
        <div class="particles"></div>
        <div class="gradient-overlay"></div>
    </div>

    <!-- Main Content -->
    <div class="register-content">
        <!-- Brand Header -->
        <div class="brand-header">
            <div class="logo-animated">📖</div>
            <h1 class="brand-title">Join BrainDumpster</h1>
            <p class="brand-subtitle">Start your journey of self-discovery</p>
        </div>

        <!-- Registration Card -->
        <div class="register-card-full">
            <div class="card-header">
                <h2>Create Your Account</h2>
                <p>It only takes a minute to get started</p>
            </div>

            <div class="form-wrapper">
                <div class="input-field">
                    <label>👤 Choose Username</label>
                    <input type="text"
                           placeholder="Enter a username"
                           @bind="username"
                           class="modern-input-full" />
                    <small class="input-hint">At least 3 characters</small>
                </div>

                <div class="input-row">
                    <div class="input-field">
                        <label>🔢 Create PIN</label>
                        <input type="password"
                               placeholder="4-6 digit PIN"
                               @bind="pin"
                               maxlength="6"
                               class="modern-input-full" />
                    </div>

                    <div class="input-field">
                        <label>🔢 Confirm PIN</label>
                        <input type="password"
                               placeholder="Re-enter your PIN"
                               @bind="confirmPin"
                               maxlength="6"
                               class="modern-input-full" />
                    </div>
                </div>

                <!-- PIN Strength -->
                @if (!string.IsNullOrEmpty(pin))
                {
                    <div class="strength-container">
                        <div class="strength-label">
                            <span>PIN Strength</span>
                            <span class="strength-score">@GetPinStrength()/4</span>
                        </div>
                        <div class="strength-bars">
                            @for (int i = 1; i <= 4; i++)
                            {
                                <div class="strength-bar @(i <= GetPinStrength() ? "active" : "")"></div>
                            }
                        </div>
                        <small class="strength-hint">
                            @GetStrengthHint()
                        </small>
                    </div>
                }

                <button @onclick="RegisterUser" class="register-btn-full" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner"></span>
                        <span>Creating Account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                        <span class="btn-icon">🚀</span>
                    }
                </button>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert-message @(isError ? "error" : "success")">
                        @message
                    </div>
                }

                <div class="terms-box">
                    <p class="terms-text">
                        By creating an account, you agree to our
                        <a href="#" class="terms-link">Terms of Service</a> and
                        <a href="#" class="terms-link">Privacy Policy</a>
                    </p>
                </div>

                <div class="divider">
                    <span>Already have an account?</span>
                </div>

                <a href="/login" class="login-link-full">
                    Sign in instead
                </a>
            </div>
        </div>

        <!-- Benefits Section -->
        <div class="benefits-section">
            <h3 class="benefits-title">Why Join BrainDumpster?</h3>
            <div class="benefits-grid">
                <div class="benefit-item">
                    <div class="benefit-icon">✨</div>
                    <h4>Completely Free</h4>
                    <p>No hidden fees, no subscriptions. Ever.</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">🔐</div>
                    <h4>Your Data Stays Yours</h4>
                    <p>We never share or sell your personal thoughts.</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">📈</div>
                    <h4>Track Your Growth</h4>
                    <p>See how your mood and thoughts evolve over time.</p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="register-footer">
            <p>"The first step towards getting somewhere is to decide you're not going to stay where you are." — J.P. Morgan</p>
        </div>
    </div>
</div>

